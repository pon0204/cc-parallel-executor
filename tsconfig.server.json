{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
